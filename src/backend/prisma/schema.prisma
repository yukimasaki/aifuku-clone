// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  uid           String  @unique
  email         String  @unique
  display_name  String
  tenant        Tenant  @relation(fields: [tenant_id], references: [id])
  tenant_id     Int
}

model Tenant {
  id            Int     @id @default(autoincrement())
  display_name  String
  users         User[]
}
